package mypackage;

public class ControlStmt {
	public static void main(String args[]) 
	{
	//if loop
	int a, b; 
	a=1;
	b=4;
	if(a < b) 
		a = 0; 
	else b = 0;
	System.out.println("a="+a+" b="+b);
	
	// Nested if class assignment - Find greatest in 3 digits
	
	int i=10,j=19,k=122,c,d=5,e=7;
	if(i == 10) 
	{   
		if(j < 20) 
			a = b;   
		if(k > 100) 
			c = d; // this if is   
		else a = c;        // associated with this else 
		} 
	else a = e;          // this else refers to if(i == 10)
	}
}
